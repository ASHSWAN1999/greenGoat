<div class="container-fluid px-4">
<h3 class="product-heading pl-0 pt-2">Windows</h3>
<div class="form-check">
  <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
  <label class="form-check-label" for="flexRadioDefault1">
    All Windows (31)
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
  <label class="form-check-label" for="flexRadioDefault2">
    Sash Windows (12)
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
  <label class="form-check-label" for="flexRadioDefault1">
    Fixed Windows (4)
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
  <label class="form-check-label" for="flexRadioDefault1">
    Transom Windows (14)
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
  <label class="form-check-label" for="flexRadioDefault1">
    Garden Windows (1)
  </label>
</div>

<hr class="mt-3">

<h3 class="product-heading pl-0 pt-2">Price</h3>
<%= form_with(model: @product, class: "container-fluid p-0", local: true) do |f| %>
    <div class="row">
        <div class="col pl-3 pr-1">
            <%= f.label :primary, 'Min', class: "" %>
            <%= f.text_field :primary, class:"input", placeholder: "$0.00" %>
        </div>
        <div class="col pr-3 pl-1">
            <%= f.label :primary, 'Max', class: "" %>
            <%= f.text_field :primary, class:"input", placeholder: "$0.00" %>
        </div>
    </div>
    <%= f.submit "APPLY", class:"btn-secondary mb-1" %>
<% end %>
<hr class="mt-3">

<h3 class="product-heading pl-0 pt-2">Number Available </h3>
<%= form_with(model: @product, class: "container-fluid p-0", local: true) do |f| %>
    <div class="row">
        <div class="col-4 pl-3 pr-1">
            <%= f.label :primary, 'Minimum number of items', class: "" %>
            <%= f.text_field :primary, class:"input", placeholder: "1" %>
        </div>
    </div>
    <%= f.submit "APPLY", class:"btn-secondary mb-1" %>
<% end %>


</div>