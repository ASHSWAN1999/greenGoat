<div class="container-fluid text-center px-0">
    <h1 class="mt-4 product-1">Salvaged Windows</h1>
    <p>Bread / Crumb / Path</p>
    <hr class="mt-4">
</div>

<div class="d-md-none">
    <p>
        <button class="btn btn-primary m-3" data-toggle="collapse" data-target="#mobile_filters" role="button" aria-expanded="false">FILTERS</button>
    </p>

    <div id="mobile_filters" class="collapse">
        <h3 class="product-heading pl-4 pt-2">Filters go here</h3>
    </div>
</div>

<div class="container-fluid">
    <div class="row">

        <div class="fixed d-none d-md-block">
            <h3 class="product-heading pl-4 pt-4">Windows</h3>
            <hr class="mr-3">
        </div>

        <div class="col p-4">
            <div class="row d-flex">

                <% @products.each do |product| %>
                    <div class="col-6 col-lg-4 col-xl-3 mb-2">
                        <div class="thumbnail-container">
                            <%= image_tag("no_image.png") %>

                            <% if product.rare_find %>
                                <div class="container tag">
                                    <svg viewBox="0 0 174 58" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M174 0H0V58H174L163.125 29L174 0Z" fill="#3E9362"/>
                                    </svg>
                                    <div class="tag-text">RARE FIND</div>
                                </div>
                            <% elsif product.price? %>
                                <div class="container tag">
                                    <svg viewBox="0 0 174 58" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M174 0H0V58H174L163.125 29L174 0Z" fill="#2F80ED"/>
                                    </svg>
                                    <div class="tag-text">PRICE DROP</div>
                                </div>
                            <% end %>

                            <button type="button" class="btn">
                                <svg class="fav" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M20.8401 4.60999C20.3294 4.099 19.7229 3.69364 19.0555 3.41708C18.388 3.14052 17.6726 2.99817 16.9501 2.99817C16.2276 2.99817 15.5122 3.14052 14.8448 3.41708C14.1773 3.69364 13.5709 4.099 13.0601 4.60999L12.0001 5.66999L10.9401 4.60999C9.90843 3.5783 8.50915 2.9987 7.05012 2.9987C5.59109 2.9987 4.19181 3.5783 3.16012 4.60999C2.12843 5.64169 1.54883 7.04096 1.54883 8.49999C1.54883 9.95903 2.12843 11.3583 3.16012 12.39L4.22012 13.45L12.0001 21.23L19.7801 13.45L20.8401 12.39C21.3511 11.8792 21.7565 11.2728 22.033 10.6053C22.3096 9.93789 22.4519 9.22248 22.4519 8.49999C22.4519 7.77751 22.3096 7.0621 22.033 6.39464C21.7565 5.72718 21.3511 5.12075 20.8401 4.60999V4.60999Z" stroke="#343A3F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </button>
                        </div>

                        <h2 class="product-heading line-clamp mb-0 mt-3"><%= product.title %> - <%= product.description %></h2>
                        
                        <%= drop_zero(product.width) + "\"" if product.width? %>
                        <%= " x " + drop_zero(product.height) + "\"" if product.height? %>
                        <%= " x " + drop_zero(product.depth) + "\"" if product.depth? %>        

                        <div>
                            <span class="price">$<%= product.price %></span>
                            <span class="value">$<%= product.value %></span>
                        </div>
                        <div class="text-dark mt-2 available"><%= drop_zero(product.amount_available)%> available</div>

                        <% if product.uninstalled? %>
                            <div class="mb-4">
                                <span>Ready for Pickup</span>
                                <%= svg 'ready' %>
                            </div>
                        <% else %>
                            <div class="mb-4">
                                <span>Not Yet Uninstalled</span>
                                <%= svg 'uninstall' %>
                            </div>
                        <% end %>
                    </div>  
                <% end %>
            </div>
        </div>
    </div>
</div>

<br>





